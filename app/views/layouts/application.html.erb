<!DOCTYPE html>
<html>
  <head>
    <title>Hlamito</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

<div class="container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="<% articles_path %>">Объявления</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Заглушка 1</a>
        </li>
        <li class="nav-item">
          <% if user_signed_in? %>
          <%= link_to "Выход", destroy_user_session_path, method: :deleteh, class: 'btn btn-outline' %>
          <% else %>
          <%= link_to "Вход", new_user_session_path, class: 'btn btn-outline' %>
          <%= link_to "Регистрация", new_user_registration_path, class: 'btn btn-outline' %>
          <% end %>
        </li>
        <%= link_to "Создать объявление", new_article_path, class: 'btn btn-outline pull-xs-right' %>
      </ul>
  </nav>
</div>
<div class="container main">
    <%= yield %>
</div>
  </body>
</html>
